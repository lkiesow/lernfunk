<h3>Video: (:title:)</h3>
<div>
	<div class="objcontainer">
		(:academy:)
		(:department:)
		(:lecturer:)
		<h4>Autor</h4>
			<div class="infoblock">(:author:)</div>
		<h4>Beschreibung</h4>
			<div class="infoblock">(:desc:)</div>
		<h4>Datum</h4>
			<div class="infoblock">
				(:date:)
			</div>
		<h4>Format</h4>
			<div class="infoblock">
				(:format:)
			</div>
		<h4>Semester</h4>
			<div class="infoblock">
				(:term:)
			</div>
			<p style="text-align: center;">
				<object id="oc_Videodisplay" type="application/x-shockwave-flash"
					data="app/hd-player/Videodisplay.swf"
					style="width: 480px; height: 270px;">
					<param name="allowScriptAccess" value="always" />
					<param name="allowFullScreen" value="true" />
					<param name="movie" value="app/hd-player/Videodisplay.swf" />
					<param name="quality" value="high" />
					<param name="bgcolor" value="#000000" />
					<param name="flashvars" value="video_url=(:url:)" />
				</object>
			</p>
	</div>
</div>
